<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewPage_selectInter"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#5c5c5c"
        android:lineSpacingExtra="1.5sp"
        tools:text="상대방의 관심분야를 선택하세요."
        android:fontFamily="@font/kopubdotumbold"
        android:layout_marginTop="26dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="13.8sp"
        android:textColor="#7f7f7f"
        android:lineSpacingExtra="1.5sp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/kopubdotummedium"
        tools:text="선택한 관심분야를 가진 이와 일기를 쓸 수 있습니다." />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:layout_marginTop="19dp">
        <Button
            android:layout_width="103dp"
            android:layout_height="42dp"
            android:layout_marginRight="9.5dp"
            android:layout_marginBottom="11.2dp"
            android:text="여행"
            android:textStyle="bold"
            android:textSize="13.8sp"
            android:textColor="#7f7f7f"
            android:background="@drawable/select_btn"/>
        <Button
            android:layout_width="103dp"
            android:layout_height="42dp"
            android:layout_marginRight="9.5dp"
            android:text="스포츠"
            android:textStyle="bold"
            android:textSize="13.8sp"
            android:textColor="#7f7f7f"
            android:background="@drawable/select_btn"/>
        <Button
            android:layout_width="103dp"
            android:layout_height="42dp"
            android:text="영화"
            android:textStyle="bold"
            android:textSize="13.8sp"
            android:textColor="#7f7f7f"
            android:background="@drawable/select_btn"/>
        <Button
            android:layout_width="103dp"
            android:layout_height="42dp"
            android:text="독서"
            android:layout_marginBottom="11.2dp"
            android:textStyle="bold"
            android:textSize="13.8sp"
            android:textColor="#7f7f7f"
            android:background="@drawable/select_btn"/>
        <Button
            android:layout_width="103dp"
            android:layout_height="42dp"
            android:text="MBTI"
            android:textStyle="bold"
            android:textSize="13.8sp"
            android:textColor="#7f7f7f"
            android:background="@drawable/select_btn"/>
        <Button
            android:layout_width="103dp"
            android:layout_height="42dp"
            android:text="테크"
            android:textStyle="bold"
            android:textSize="13.8sp"
            android:textColor="#7f7f7f"
            android:background="@drawable/select_btn"/>
        <Button
            android:layout_width="103dp"
            android:layout_height="42dp"
            android:text="마케팅"
            android:textStyle="bold"
            android:textSize="13.8sp"
            android:textColor="#7f7f7f"
            android:background="@drawable/select_btn"/>
        <Button
            android:layout_width="103dp"
            android:layout_height="42dp"
            android:text="디자인"
            android:textStyle="bold"
            android:textSize="13.8sp"
            android:textColor="#7f7f7f"
            android:background="@drawable/select_btn"/>
        <Button
            android:layout_width="103dp"
            android:layout_height="42dp"
            android:text="커리어"
            android:textStyle="bold"
            android:textSize="13.8sp"
            android:textColor="#7f7f7f"
            android:background="@drawable/select_btn"/>
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#5c5c5c"
        android:lineSpacingExtra="1.5sp"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/kopubdotumbold"
        tools:text="상대방의 성별을 선택하세요." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="19dp">
        <Button
            android:layout_width="157dp"
            android:layout_height="42dp"
            android:text="여성"
            android:textStyle="bold"
            android:textSize="13.8sp"
            android:textColor="#7f7f7f"
            android:layout_marginRight="9.5dp"
            android:background="@drawable/select_long_btn"/>
        <Button
            android:layout_width="157dp"
            android:layout_height="42dp"
            android:text="남성"
            android:textStyle="bold"
            android:textSize="13.8sp"
            android:textColor="#7f7f7f"
            android:background="@drawable/select_long_btn"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="49.5dp"
        android:text="다음"
        android:layout_gravity="bottom"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:layout_marginTop="145dp"
        android:fontFamily="@font/kopubdotumbold"
        android:background="@drawable/long_btn" />
</LinearLayout>