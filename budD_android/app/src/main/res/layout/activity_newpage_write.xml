<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    tools:context=".NewPage_write">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="25dp">

            <EditText
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmdohyeon"
                android:textSize="25sp"
                android:hint="제목을 입력하세요." />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kopubdotumbold"
                android:textStyle="bold"
                android:textSize="13.8sp"
                android:textColor="#7f7f7f"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="1.5sp"
                android:layout_gravity="right"
                android:text="2021-01-01" />

            <EditText
                android:layout_marginTop="12dp"
                android:layout_width="328dp"
                android:layout_height="426dp"
                android:hint="일기를 작성해주세요."
                android:gravity="top"
                android:padding="12dp"
                android:background="@drawable/edit_bg" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="13.8sp"
                    android:textColor="#7f7f7f"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="1.5sp"
                    android:gravity="end"
                    android:text="0" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="13.8sp"
                    android:textColor="#7f7f7f"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="1.5sp"
                    android:gravity="end"
                    android:text=" / 3000" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kopubdotumbold"
                android:textStyle="bold"
                android:textSize="13.8sp"
                android:textColor="#8fabb8"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="1.5sp"
                android:text="From." />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kopubdotumbold"
                android:textStyle="bold"
                android:textSize="13.8sp"
                android:textColor="#7f7f7f"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="1.5sp"
                android:text="닉네임" />



            <Button
                android:layout_width="match_parent"
                android:layout_height="49.5dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="50dp"
                android:text="다음"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:fontFamily="@font/kopubdotumbold"
                android:background="@drawable/long_btn" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>