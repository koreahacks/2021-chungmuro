<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page_view"
    android:orientation="vertical"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--제목-->
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목입니다."
                android:textSize="25sp"
                android:textColor="#5c5c5c"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/bmdohyeon"
                android:lineSpacingExtra="0.32sp"
                />

            <!--날짜-->
            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021-01-09"
                android:textSize="13.8sp"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:fontFamily="@font/kopubdotumbold"
                android:textColor="#7f7f7f"
                android:layout_marginTop="26dp"
                />

            <!--일기 내용-->
            <TextView
                android:id="@+id/txtDiary"
                android:layout_width="328dp"
                android:layout_height="426dp"
                android:layout_marginTop="12dp"
                android:text="hhhhh"
                android:padding="12dp"
                android:background="@drawable/edit_bg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kopubdotumbold"
                android:textStyle="bold"
                android:textSize="13.8sp"
                android:textColor="#8fabb8"
                android:layout_marginTop="25dp"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="1.5sp"
                android:text="From." />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kopubdotumbold"
                android:textStyle="bold"
                android:textSize="13.8sp"
                android:textColor="#7f7f7f"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="1.5sp"
                android:text="닉네임" />

        </LinearLayout>
    </ScrollView>




</LinearLayout>